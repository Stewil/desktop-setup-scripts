logout(){
    session=`loginctl session-status | head -n 1 | awk '{print $1}'`
    loginctl terminate-session $session
}

powerline-daemon -q
if [ "$(tty)" = "/dev/tty1" ]; then
    export XTERM='urxvt'
    if [ -f "$HOME/.config/i3/config" ]; then
        startx 
    else
        echo "i3 config not found. refusing to start x"
    fi
else
    source $HOME/.bashrc
fi

